{
  // Explorer
  "explorer.autoReveal": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // Workbench
  "workbench.sideBar.location": "right",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.navigationControl.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Default Dark+",
  // Terminal
  "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.env.osx": {},
  "terminal.integrated.defaultProfile.osx": "tmux",
  // VIM
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-m>"],
      "commands": [":nohl"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // GitHub
  "github.copilot.enable": {
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Be extremely detailed with the file changes and the reason for the change. Add lots of emojis."
    }
  ],
  // Git
  "git.openRepositoryInParentFolders": "never",
  "git.ignoreRebaseWarning": true,
  // "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  // My Config
  // Editor
  "editor.fontFamily": "MonoLisa, MesloLGS Nerd Font Mono",
  "editor.lineNumbers": "relative",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 24,
  "editor.linkedEditing": true,
  "editor.links": true,
  "editor.wordBasedSuggestions": "off",
  // "editor.quickSuggestionsDelay": 1000000,
  "editor.parameterHints.enabled": true,
  "editor.fontWeight": "300",
  "editor.cursorWidth": 5,
  "editor.matchBrackets": "always",
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.accessibilitySupport": "off",
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\\\|:'\\\",.<>/?",
  "editor.suggestOnTriggerCharacters": true,
  "editor.tabCompletion": "on",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.tabSize": 2,
  "editor.inlineSuggest.enabled": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line-thin",
  "editor.guides.bracketPairs": "active",
  "editor.largeFileOptimizations": true,
  "editor.letterSpacing": 0.3,
  "editor.renderWhitespace": "none",
  "editor.rulers": [80],
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, return…
          "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  // Ext config
  "debug.disassemblyView.showSourceCode": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "emmet.includeLanguages": {
    "ejs": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.excludeLanguages": ["markdown"],
  "emmet.showExpandedAbbreviation": "always",
  "liveServer.settings.donotShowInfoMsg": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "editor.minimap.renderCharacters": false,
  "explorer.openEditors.visible": 1,
  "files.trimTrailingWhitespace": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.hover.delay": 0,
  "css.validate": false,
  "extensions.ignoreRecommendations": true,
  "security.workspace.trust.untrustedFiles": "open",

  // File type
  "files.associations": {
    "*.css": "tailwindcss",
    "*.ejs": "html"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },
  "todohighlight.isEnable": true,
  // Prettier
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.trailingComma": "es5",
  "prettier.arrowParens": "always",
  "prettier.jsxSingleQuote": true,
  // Search
  "search.defaultViewMode": "tree",
  // Window
  "window.newWindowProfile": "Default",
  "window.autoDetectHighContrast": false,
  "workbench.editorAssociations": {
    "*.png": "imagePreview.previewEditor"
  },
